{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "options": {
        "env": {
            "BIN_NAME": "plane"
        }
    },
    "tasks": [
        {
            "label": "Build Bot",
            "type": "shell",
            "command": "go",
            "args": [
                "build",
                "-o",
                "bin/$BIN_NAME",
                "./cmd"
            ],
            "icon": {
                "id": "tools"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": []
        },
        {
            "label": "Rebuild & Run Bot",
            "type": "shell",
            "command": "./bin/$BIN_NAME",
            "icon": {
                "id": "play"
            },
            "dependsOn": "Build Bot",
            "problemMatcher": []
        },
        {
            "label": "Run Bot",
            "type": "shell",
            "command": "./bin/$BIN_NAME",
            "icon": {
                "id": "play",
                "color": "terminal.ansiGreen"
            },
            "dependsOn": "Build Bot",
            "problemMatcher": []
        }
    ]
}